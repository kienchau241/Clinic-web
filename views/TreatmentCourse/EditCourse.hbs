<form class="mt-4" method="POST" action="/api/v1/courses/{{this.id}}?_method=PATCH">
  <h1>Edit course</h1>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      aria-describedby="emailHelp"
      value="{{this.name}}"
    />
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <input type="text" class="form-control" id="description" name="description" value="{{this.description}}"/>
  </div>
  <div class="mb-3">
    <label for="price" class="form-label">Price</label>
    <input type="number" step="0.1" class="form-control" id="price" name="price" value="{{this.price}}"/>
  </div>
  <div class="mb-3">
    <label for="idDis" class="form-label">Id Dis</label>
    <input type="number" step="0.1" class="form-control" id="idDis" name="idDis" value="{{this.idDis}}"/>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>