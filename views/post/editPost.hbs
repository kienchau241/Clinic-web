<form class="mt-4" method="POST" action="/api/v1/post/{{this.id}}?_method=PATCH">
  <h1>Edit post</h1>
  <div class="mb-3">
    <label for="name" class="form-label">Title</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      aria-describedby="emailHelp"
      value="{{this.title}}"
    />
  <div class="mb-3">
    <label for="content" class="form-label">Content</label>
    <textarea rows="15" type="text" class="form-control" id="content" name="content">{{this.content}}</textarea>
  </div>
  <div class="mb-3">
    <label for="UserId" class="form-label">User Id</label>
    <input type="number" class="form-control" id="UserId" name="UserId" value="{{this.UserId}}"/>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>