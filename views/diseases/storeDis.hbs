<div class="mt-4">
  <h1>My Diseases</h1>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Cause</th>
        <th scope="col"></th>

      </tr>
    </thead>
    <tbody>
      {{#each diseases}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.nameDis}}</td>
          <td>{{this.Cause}}</td>
          <td>
            <a href="./{{this.idDis}}/edit" class="btn btn-link">Edit</a>
            <a href="" class="btn btn-link">Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>