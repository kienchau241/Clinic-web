<form class="mt-4" method="POST" action="/api/v1/disease/{{this.idDis}}?_method=PATCH">
  <h1>Edit disease</h1>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="nameDis"
      name="nameDis"
      aria-describedby="emailHelp"
      value="{{this.nameDis}}"
    />
  <div class="mb-3">
    <label for="Cause" class="form-label">Cause</label>
    <input type="text" class="form-control" id="Cause" name="Cause" value="{{this.Cause}}"/>
  </div>
  <div class="mb-3">
    <label for="Conditions" class="form-label">Conditions</label>
    <input type="text" step="0.1" class="form-control" id="Conditions" name="Conditions" value="{{this.Conditions}}"/>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>