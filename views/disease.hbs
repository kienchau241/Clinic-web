<div class="mt-4">
  <div class="add">
    <a href="./disease/create" class="btn btn-primary btn-add">Add disease</a>
  </div>
  <div class="row">
    {{#each diseases}}
    <div class="col-sm-6 col-lg-4">
        <div class="card" style="margin-top:16px;">
            <img src="https://climate.onep.go.th/wp-content/uploads/2020/01/default-image.jpg" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">{{this.nameDis}}</h5>
              <p class="card-text">{{this.Cause}}</p>
              <a href="./disease/{{this.idDis}}" class="btn btn-primary">Detail</a>
            </div>
        </div>
    </div>
    {{/each}}

    </div>
  </div>
</div>

<style>
    p{
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .add{
      display: flex;
      flex-direction: row-reverse;
    }
</style>